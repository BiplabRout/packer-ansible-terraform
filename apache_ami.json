{
  "variables": { 
     "aws_acces_key": "",
	 "aws_secret_key": ""
  }  
  "builders": [
     {
       "type": "amazon-ebs",
	 "access_key": "{{user `aws_acces_key`}}",
       "secret_key": "{{user `aws_secret_key`}}",
       "region": "eu-west-1",
       "ami_name": "apache_webserver",
       "source_ami": "ami-02b4e72b17337d6c1",
       "instance_type": "t2.micro",
       "ssh_username": "ec2-user"
     }

  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "ansible.sh"
    },

   {
     "type": "ansible-local",
     "playbook_file" : "apache_install.yml"
   }
  ]
}
